<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#0050C8" />
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#2173EF"
        android:layout_gravity="center_horizontal" />
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#5C9BFA"
        android:layout_gravity="end" />

    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#C003F4"
        android:layout_gravity="center_vertical"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#DA62FB"
        android:layout_gravity="center" />
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#EBA3FF"
        android:layout_gravity="center|end" />

    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#F43303"
        android:layout_gravity="bottom"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#FF6F4C"
        android:layout_gravity="center|bottom" />
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#FFA893"
        android:layout_gravity="bottom|end" />

</FrameLayout>